<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.android.szparag.animateddropletwidgetshowcase.MockSkypeActivity"
  style="@style/Theme.AppCompat.NoActionBar"
  android:background="@drawable/gradient_linear_diagonal">

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/gradient_linear_darken_90"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/textView"
    android:alpha="0.20" />


  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/gradient_linear_darken_270"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/mainAvatar"
    android:alpha="0.15" />

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/mock_skype_background_primary"
    app:layout_constraintTop_toTopOf="@id/guideline9"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:alpha="0.75"
    app:layout_constraintBottom_toBottomOf="@id/guideline6" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:id="@+id/top_linear_layout"
    app:layout_constraintTop_toTopOf="@id/guideline9"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/guideline6"
    android:gravity="right|end"
    android:foregroundGravity="right"
    app:layout_constraintHorizontal_bias="1.0"
    android:paddingEnd="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp">

    <com.android.szparag.animateddropletwidget.AnimatedDropletWidget
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:background="@drawable/mock_skype_avatar"
      android:layout_weight="1"
      android:layout_gravity="right|center_vertical|end"
      app:drawable_src="@drawable/mock_skype_avatar"
      app:background_layers_count="0"
      app:droplets_layers_count="0"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp" />

    <com.android.szparag.animateddropletwidget.AnimatedDropletWidget
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      app:preset="breath"
      app:drawable_src="@drawable/mock_skype_avatar"
      tools:background="@drawable/mock_skype_avatar"
      android:layout_weight="1"
      android:layout_gravity="right|center_vertical|end"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp" />

    <com.android.szparag.animateddropletwidget.AnimatedDropletWidget
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:background="@drawable/mock_skype_avatar"

      app:preset="breath"
      app:drawable_src="@drawable/mock_skype_avatar"
      android:layout_weight="1"
      android:layout_gravity="right|center_vertical|end"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp" />
  </LinearLayout>

  <View
    android:layout_height="1dp"
    android:layout_width="match_parent"
    android:background="@color/mock_skype_button_primary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/top_linear_layout"
    android:elevation="2dp"
    android:id="@+id/view" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline2"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline9"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.0" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline6"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="64dp" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline7"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.95" />

  <android.support.constraint.Guideline
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/guideline8"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.8" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="@id/guideline8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/guideline7"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:id="@+id/linearLayout">

    <android.support.design.widget.FloatingActionButton
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:hapticFeedbackEnabled="true"
      android:soundEffectsEnabled="true"
      app:srcCompat="@drawable/ic_action_plus"
      android:id="@+id/floatingActionButton1"
      android:layout_weight="10"
      app:elevation="2dp"
      android:layout_margin="8dp"
      app:backgroundTint="@color/mock_skype_button_primary"
      android:tint="@color/mock_skype_background_primary"
      app:rippleColor="@color/mock_skype_background_primary"
      android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:hapticFeedbackEnabled="true"
      android:soundEffectsEnabled="true"
      app:srcCompat="@drawable/ic_action_camera"
      android:id="@+id/floatingActionButton2"
      android:layout_weight="10"
      app:elevation="4dp"
      android:layout_margin="8dp"
      app:backgroundTint="@color/mock_skype_button_primary"
      android:tint="@color/mock_skype_background_primary"
      app:rippleColor="@color/mock_skype_background_primary"
      android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:hapticFeedbackEnabled="true"
      android:soundEffectsEnabled="true"
      app:srcCompat="@drawable/ic_action_end_call"
      android:id="@+id/floatingActionButton3"
      android:layout_weight="0"
      app:elevation="6dp"
      android:layout_margin="8dp"
      app:backgroundTint="@color/mock_skype_button_red_primary"
      android:tint="@color/mock_skype_button_primary"
      app:rippleColor="@color/mock_skype_button_primary"
      android:cropToPadding="false"
      android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:hapticFeedbackEnabled="true"
      android:soundEffectsEnabled="true"
      app:srcCompat="@drawable/ic_action_microphone"
      android:id="@+id/floatingActionButton4"
      android:layout_weight="10"
      app:elevation="4dp"
      android:layout_margin="8dp"
      app:backgroundTint="@color/mock_skype_button_primary"
      android:tint="@color/mock_skype_background_primary"
      app:rippleColor="@color/mock_skype_background_primary"
      android:layout_gravity="center" />

    <android.support.design.widget.FloatingActionButton
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:focusable="true"
      android:hapticFeedbackEnabled="true"
      android:soundEffectsEnabled="true"
      app:srcCompat="@drawable/ic_action_settings"
      android:id="@+id/floatingActionButton5"
      android:layout_weight="10"
      app:elevation="2dp"
      android:layout_margin="8dp"
      app:backgroundTint="@color/mock_skype_button_primary"
      android:tint="@color/mock_skype_background_primary"
      app:rippleColor="@color/mock_skype_background_primary"
      android:layout_gravity="center" />
  </LinearLayout>

  <TextView
    android:text="@string/mock_skype_audiocall_description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="32dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="32dp"
    android:layout_marginBottom="32dp"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
    app:layout_constraintTop_toBottomOf="@+id/mainAvatar"
    android:lineSpacingExtra="4sp"
    android:textAlignment="center"
    android:fontFamily="@font/metrophobic"
    android:textSize="18sp"
    android:textColor="@android:color/white" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline6"
    app:layout_constraintBottom_toTopOf="@+id/mainAvatar"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="8dp"
    android:lineSpacingExtra="4sp"
    android:textAlignment="center"
    android:fontFamily="@font/metrophobic"
    android:textSize="24sp"
    android:textColor="@color/mock_skype_background_primary"
    tools:text="0:14"
    android:text="0:14"
    android:textStyle="bold" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline10"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.28" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline11"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.61" />

  <com.android.szparag.animateddropletwidget.AnimatedDropletWidget
    android:id="@+id/mainAvatar"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="@id/guideline12"
    app:layout_constraintTop_toBottomOf="@id/textView2"
    app:layout_constraintBottom_toTopOf="@id/textView"
    app:layout_constraintEnd_toEndOf="@id/guideline13"
    tools:background="@android:color/holo_orange_dark"
    app:drawable_src="@drawable/mock_skype_avatar"
    app:preset="breath"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline12"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.20924574" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline13"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.79" />

</android.support.constraint.ConstraintLayout>
