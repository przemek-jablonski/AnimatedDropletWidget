<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.android.szparag.animateddropletwidgetshowcase.MockSportsTrackerActivity"
  android:background="@color/mockSportsTrackerBlack">

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/guideline19"
    android:background="@drawable/mock_sports_tracker_gradient_top_down"
    android:alpha="0.2"
    android:id="@+id/topGradientView"
    android:visibility="gone"
    tools:visibility="visible"/>

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/guideline17"
    android:background="@drawable/mock_sports_tracker_gradient_bottom_up"
    android:alpha="0.2"
    android:id="@+id/bottomGradientView"
    android:visibility="gone"
    tools:visibility="visible" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_secondary"
    android:id="@+id/milesImageView"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginBottom="32dp"
    app:layout_constraintTop_toTopOf="@+id/guideline19"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    app:layout_constraintBottom_toTopOf="@+id/guideline18" />

  <TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/milesContentTextView"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    android:layout_marginEnd="16dp"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginStart="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/milesImageView"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toTopOf="@+id/milesImageView"
    android:layout_marginTop="16dp"
    android:textColor="?android:attr/textColorPrimaryInverse"
    tools:text="0.20"
    android:gravity="center" />

  <TextView
    android:text="Miles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/milesHeaderTextView"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/milesImageView"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_tertiary"
    android:id="@+id/caloriesImageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    app:layout_constraintTop_toTopOf="@+id/guideline19"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    android:layout_marginBottom="32dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline18"
    android:elevation="2dp" />

  <TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/caloriesContentTextView"
    android:layout_marginBottom="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/caloriesImageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    android:layout_marginEnd="16dp"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    android:layout_marginStart="16dp"
    app:layout_constraintTop_toTopOf="@+id/caloriesImageView"
    android:layout_marginTop="16dp"
    android:elevation="2dp"
    android:textColor="?android:attr/textColorPrimaryInverse"
    tools:text="470"
    android:gravity="center" />

  <TextView
    android:text="Calories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/caloriesHeaderTextView"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/caloriesImageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    android:layout_marginStart="8dp"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_primary"
    android:id="@+id/timeImageView"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/guideline19"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    android:elevation="6dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline18" />

  <ProgressBar
    style="?android:attr/progressBarStyle"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/timeProgressBar"
    android:elevation="6dp"
    app:layout_constraintBottom_toBottomOf="@+id/timeImageView"
    app:layout_constraintTop_toTopOf="@+id/timeImageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    android:indeterminate="true"
    android:indeterminateTint="@color/mockSportsTrackerPrimaryColour"
    android:indeterminateDrawable="@drawable/mock_sports_tracker_progressbar_circular"
    android:indeterminateDuration="1000"
    android:visibility="gone"
    tools:visibility="visible"
    tools:progress="50"
    android:alpha="0.66" />

  <TextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/timeContentTextView"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    app:layout_constraintBottom_toBottomOf="@+id/timeImageView"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/timeImageView"
    android:layout_marginTop="8dp"
    android:elevation="6dp"
    android:textColor="?android:attr/textColorPrimaryInverse"
    tools:text="00:01:01:33:740"
    android:gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

  <TextView
    android:text="Time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/timeHeaderTextView"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/timeImageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    android:layout_marginStart="8dp"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <android.support.design.widget.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_action_cycling"
    android:id="@+id/startWorkoutImageView"
    android:tint="@color/mockSportsTrackerPrimaryColour"
    android:padding="16dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="32dp"
    app:layout_constraintEnd_toStartOf="@+id/startWorkoutTextView"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/timeHeaderTextView"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:backgroundTint="@color/mockSportsTrackerGrey"
    app:elevation="6dp"
    app:rippleColor="@color/mockSportsTrackerPrimaryColour"
    android:clickable="true"
    android:layout_marginLeft="32dp" />

  <TextView
    android:text="Start your cycling workout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/startWorkoutTextView"
    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
    android:padding="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="32dp"
    app:layout_constraintStart_toEndOf="@+id/startWorkoutImageView"
    app:layout_constraintHorizontal_bias="0.5"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/timeHeaderTextView"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="32dp" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline3"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.30" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline4"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.7" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline5"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.93" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline14"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.63" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline15"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.07" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline16"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.37" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline17"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.8490879" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline18"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.8" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline19"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.15" />
</android.support.constraint.ConstraintLayout>
