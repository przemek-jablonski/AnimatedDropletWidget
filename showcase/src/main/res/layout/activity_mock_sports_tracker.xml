<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.android.szparag.animateddropletwidgetshowcase.MockSportsTrackerActivity"
  android:background="@color/mockSportsTrackerBlack">

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_secondary"
    android:id="@+id/imageView2"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    app:layout_constraintBottom_toTopOf="@+id/guideline17" />

  <TextView
    android:text="0.20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView8"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/imageView2"
    android:layout_marginTop="8dp"
    android:textColor="?android:attr/textColorPrimaryInverse" />

  <TextView
    android:text="Miles"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView7"
    app:layout_constraintEnd_toStartOf="@+id/guideline5"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline14"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/imageView2"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_tertiary"
    android:id="@+id/imageView3"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline17"
    android:elevation="2dp" />

  <TextView
    android:text="470"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView9"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    android:layout_marginStart="8dp"
    app:layout_constraintTop_toTopOf="@+id/imageView3"
    android:layout_marginTop="8dp"
    android:elevation="2dp"
    android:textColor="?android:attr/textColorPrimaryInverse" />

  <TextView
    android:text="Calories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView6"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/imageView3"
    app:layout_constraintEnd_toStartOf="@+id/guideline16"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline15"
    android:layout_marginStart="8dp"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:srcCompat="@drawable/mock_sports_tracker_button_primary"
    android:id="@+id/imageView"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    android:elevation="6dp" />

  <TextView
    android:text="0:01:33:74"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView4"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    android:layout_marginStart="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/imageView"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="@+id/imageView"
    android:layout_marginTop="8dp"
    android:elevation="6dp"
    android:textColor="?android:attr/textColorPrimaryInverse" />

  <TextView
    android:text="Time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView3"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/imageView"
    app:layout_constraintEnd_toStartOf="@+id/guideline4"
    android:layout_marginEnd="8dp"
    app:layout_constraintStart_toStartOf="@+id/guideline3"
    android:layout_marginStart="8dp"
    android:textColor="?android:attr/textColorSecondaryInverse" />

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@drawable/ic_action_cycling"
    android:id="@+id/imageView5"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="8dp"
    app:layout_constraintHorizontal_bias="0.6"
    app:layout_constraintEnd_toStartOf="@+id/textView2"
    app:layout_constraintHorizontal_chainStyle="packed"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/textView3"
    android:tint="@color/mockSportsTrackerPrimaryColour"
    android:padding="16dp" />

  <TextView
    android:text="Start your cycling workout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/imageView5"
    android:layout_marginBottom="8dp"
    app:layout_constraintStart_toEndOf="@+id/imageView5"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintTop_toTopOf="@+id/imageView5"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
    android:padding="8dp" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline3"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.30" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline4"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.7" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline5"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.93" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline14"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.63" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline15"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.07" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline16"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.37" />

  <android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline17"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.85" />
</android.support.constraint.ConstraintLayout>
